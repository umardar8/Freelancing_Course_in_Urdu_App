<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".Article1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/titleTextStyle"
            android:layout_width="wrap_content"
            android:text="@string/thirdIconText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/background"
            android:paddingStart="@dimen/mediumPadding"
            android:paddingEnd="@dimen/mediumPadding"
            android:paddingTop="@dimen/mediumPadding"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/home3"
                android:paddingBottom="@dimen/smallPadding"/>

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Intro" />

            <TextView
                style="@style/titleTextStyle"
                android:layout_width="match_parent"
                android:text="@string/Article3_heading1" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Para1" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Para2" />

            <TextView
                style="@style/titleTextStyle"
                android:layout_width="match_parent"
                android:text="@string/Article3_heading2" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Para3" />

            <TextView
                style="@style/titleTextStyle"
                android:layout_width="match_parent"
                android:text="@string/Article3_heading3" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Para4" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-5838182687945471/6889251449"
                android:layout_marginVertical="20dp" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Para5" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Para6" />

            <TextView
                style="@style/titleTextStyle"
                android:layout_width="match_parent"
                android:text="@string/Article3_heading4" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Para7" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_Para8" />

            <TextView
                style="@style/titleTextStyle"
                android:layout_width="match_parent"
                android:text="@string/conclusion" />

            <TextView
                style="@style/paragraphStyle"
                android:text="@string/Article3_conclusion" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-5838182687945471/6889251449"
                android:layout_marginVertical="20dp" />
            <!-- Sample Banner AdUnit ID: ca-app-pub-3940256099942544/9214589741 -->
            <!-- Production Banner AdUnit ID: ca-app-pub-5838182687945471/6889251449 -->
        </LinearLayout>
    </LinearLayout>

</ScrollView>